.form
  %form.form__new-message#new-message{enctype:"multipart/form-data"}
    %input{type:"hidden", name:"utf8"}
    %input{type:"hidden", name:"authenticity_token"}
    .form__new-message__input-box
      %input.form__new-message__input-box__text#message-content{type:"text", name:"message", placeholder:"type a message"}
      %label{class:"form__new-message__input-box__image"}
        = fa_icon 'image'
        %input.form__new-message__input-box__image__file{type: "file"}
    %input.form__new-message__submit-btn{type:"submit", name:"commit", value:"Send", data_disable_with:"send"}